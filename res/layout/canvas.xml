<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/canvas_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"

	    android:layout_weight="1"
	    android:orientation="vertical" >

    <WebView
        android:id="@+id/console"
        android:layout_width="fill_parent" android:scrollbarAlwaysDrawVerticalTrack="true"
        android:layout_height="fill_parent"
        android:layout_weight="1" />
    <FrameLayout android:layout_width="fill_parent" android:background="#000000"
    android:layout_height="2px"></FrameLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1" android:scrollbarAlwaysDrawVerticalTrack="true">

        <LinearLayout android:id="@+id/errorLog"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>
    
    </LinearLayout>
	<FrameLayout android:layout_width="2px" android:background="#000000"
    android:layout_height="fill_parent"></FrameLayout>

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="480px"
        android:layout_height="800px"
        android:layout_weight="0"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/mainLayout" >

            <ProgressBar
                android:id="@+id/loadingProgressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/loadingProgressBar"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:src="@drawable/droiuby_white" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loadingProgressBar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:text="The dog is fetching your app..." />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>